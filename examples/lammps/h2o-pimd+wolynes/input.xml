<simulation verbosity='high'>
  <output prefix='simulation'>
    <properties stride='4' filename='out'>  [ step, time{picosecond}, conserved, temperature{kelvin}, kinetic_cv, potential, pressure_cv{megapascal}] </properties>
    <properties stride='4' filename='pes'> [ pot_component_raw(0;0), pot_component_raw(0;1), pot_component_raw(0;2), pot_component_raw(0;3),
                                             pot_component_raw(1;0), pot_component_raw(1;1), pot_component_raw(1;2), pot_component_raw(1;3) ] </properties>
    <trajectory filename='pos' stride='40'> positions </trajectory>
  </output>
  <total_steps>40000</total_steps>
  <prng>
    <seed>32346</seed>
  </prng>
  <ffsocket name='lmpserial1' mode='unix'>
    <address>h2o-pimd+rpc_short</address>
  </ffsocket>
  <ffsocket name='lmpserial2' mode='unix'>
    <address>h2o-pimd+rpc_long</address>
  </ffsocket>
  <system>
    <initialize nbeads='4'>
      <file mode='pdb'> init.pdb </file>
      <velocities mode='thermal' units='kelvin'> 300 </velocities>
    </initialize>
    <forces>
      <force nbeads='4' forcefield='lmpserial1'> <bead_weights> [1,-10,10,0] </bead_weights> </force>
      <force nbeads='4' forcefield='lmpserial2'>  <bead_weights> [0,10,-10,1] </bead_weights> </force>
    </forces>
    <motion mode='dynamics'>
      <dynamics mode='nvt'>
        <timestep units='femtosecond'> 0.25 </timestep>
        <thermostat mode='langevin'>
          <tau units='femtosecond'> 100 </tau>
        </thermostat>
      </dynamics>
    </motion>
    <ensemble>
      <temperature units='kelvin'> 300 </temperature>
    </ensemble>
  </system>
</simulation>
