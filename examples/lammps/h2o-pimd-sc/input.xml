<simulation verbosity="medium">
   <output prefix="mts.2">
      <properties stride="1" filename="out">  [ step, time{picosecond}, conserved{electronvolt}, temperature{kelvin}, kinetic_opsc{electronvolt}, potential_opsc{electronvolt}, pressure_cv{megapascal} ] </properties>
      <checkpoint stride="200"/>
   </output>
   <total_steps>10000</total_steps>
   <prng><seed>32415</seed></prng>
   <ffsocket name="lammps" mode="unix">
      <address>driver-sc.8.mts.8</address>
   </ffsocket>
   <system>
      <initialize nbeads="32">
         <!--<file mode="pdb"> water_298K.pdb </file>-->
         <file mode='chk'> start.chk </file>
         <velocities mode="thermal" units="kelvin"> 300 </velocities>
      </initialize>
      <forces><force forcefield="lammps"> </force></forces>
      <motion mode="dynamics">
         <dynamics mode="sc">
            <timestep units="femtosecond"> 0.5 </timestep>
            <nmts>[2]</nmts>
            <thermostat mode="pile_g">
                <tau units="femtosecond"> 100 </tau>
                <pile_lambda> 0.1 </pile_lambda>
            </thermostat>
         </dynamics>
      </motion>
      <ensemble>
         <temperature units="kelvin"> 300 </temperature>
      </ensemble>
   </system>
</simulation>
