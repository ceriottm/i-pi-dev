<simulation>
   <output prefix="fd1e-4">
      <properties filename="out" stride="4">
         [ step, time{picosecond}, conserved, temperature{kelvin}, kinetic_opsc, potential_opsc, pressure_opsc{megapascal}, volume, cell_h]
      </properties>
      <trajectory format="xyz" filename="pos" stride="1"> positions </trajectory>
   </output>
   <total_steps>500000</total_steps>
   <prng><seed>31419</seed></prng>
   <ffsocket name="sgdriver" mode="unix">
      <address> T_20K.04.sc </address>
      <latency> 1e-3 </latency>
   </ffsocket>
   <system>
     <initialize nbeads="4">
        <file mode="chk"> init.chk </file>
        <velocities mode="thermal" units="kelvin"> 20 </velocities>
     </initialize>
     <forces>
        <force forcefield="sgdriver" fd_epsilon="1e-5"> </force> 
     </forces>
     <motion mode="dynamics">
        <dynamics mode="sc-npt">
            <barostat mode="sc-isotropic">
              <tau units="femtosecond"> 200 </tau>
              <thermostat mode="langevin">
                 <tau units="femtosecond"> 10 </tau>
              </thermostat>
            </barostat>   
            <thermostat mode="pile_g">
               <tau units="femtosecond"> 100 </tau>
            </thermostat>
            <timestep units="femtosecond"> 1.00 </timestep>
        </dynamics>
     </motion>
     <ensemble>
        <temperature units="kelvin"> 20 </temperature>
        <pressure units="megapascal">1</pressure>
     </ensemble>
  </system>
</simulation>
